---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";
---

<Layout title={`Thank You | ${SITE.title}`}>
  <Header />

  <main
    id="main-content"
    class="app-layout flex flex-1 items-center justify-center"
  >
    <div class="mb-14 flex flex-col items-center justify-center text-center">
      <!-- Animated checkmark -->
      <div class="mb-6">
        <svg 
          class="h-24 w-24 text-green-500" 
          xmlns="http://www.w3.org/2000/svg" 
          viewBox="0 0 52 52"
        >
          <circle 
            class="checkmark__circle" 
            cx="26" cy="26" r="25" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="2"
          />
          <path 
            class="checkmark__check" 
            fill="none" 
            stroke="currentColor" 
            stroke-width="4" 
            d="M14.1 27.2l7.1 7.2 16.7-16.8"
          />
        </svg>
      </div>

      <h1 class="text-5xl font-bold text-accent mb-4">Thank You!</h1>
      
      <span aria-hidden="true" class="text-4xl mb-4">üéâ</span>
      
      <p class="mt-2 text-2xl sm:text-3xl mb-2">Message Successfully Sent</p>
      
      <p class="text-lg text-gray-600 dark:text-gray-400 max-w-md mx-auto mb-8">
        We've received your message and will get back to you 
        within <strong class="text-accent">24-48 hours</strong>.
      </p>

      <!-- Action Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 mb-8">
        <LinkButton
          href="/"
          class="px-6 py-3 text-lg font-medium bg-accent text-white rounded-lg hover:bg-accent/90 transition-colors"
        >
          ‚Üê Back to Home
        </LinkButton>
        
        <LinkButton
          href="/contact"
          class="px-6 py-3 text-lg font-medium border-2 border-accent text-accent rounded-lg hover:bg-accent/10 transition-colors"
        >
          Send Another Message
        </LinkButton>
      </div>

      <!-- Additional Info -->
      <div class="mt-8 p-6 bg-gray-50 dark:bg-gray-800 rounded-lg max-w-lg text-left">
        <h3 class="text-xl font-semibold mb-4 text-gray-900 dark:text-white">
          What to expect next:
        </h3>
        <ul class="space-y-3 text-gray-700 dark:text-gray-300">
          <li class="flex items-start">
            <span class="text-green-500 mr-2">‚úì</span>
            <span>Confirmation email (check spam folder)</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-500 mr-2">‚úì</span>
            <span>Response from our team within 48 hours</span>
          </li>
          <li class="flex items-start">
            <span class="text-green-500 mr-2">‚úì</span>
            <span>Personalized assistance based on your inquiry</span>
          </li>
        </ul>
      </div>
    </div>
  </main>

  <Footer />

  <style>
    /* Animated checkmark */
    .checkmark__circle {
      stroke-dasharray: 166;
      stroke-dashoffset: 166;
      stroke-width: 2;
      stroke-miterlimit: 10;
      stroke: currentColor;
      fill: none;
      animation: stroke 0.6s cubic-bezier(0.65, 0, 0.45, 1) forwards;
    }

    .checkmark__check {
      transform-origin: 50% 50%;
      stroke-dasharray: 48;
      stroke-dashoffset: 48;
      animation: stroke 0.3s cubic-bezier(0.65, 0, 0.45, 1) 0.8s forwards;
    }

    @keyframes stroke {
      100% {
        stroke-dashoffset: 0;
      }
    }
  </style>
</Layout>