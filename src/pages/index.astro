---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconRss from "@/assets/icons/IconRss.svg";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index" class="app-layout">
    <section id="hero" class="pt-12 pb-10 md:pt-16 md:pb-14 border-b border-border">
      <div class="max-w-3xl">
        <!-- Header with RSS -->
        <div class="flex items-center justify-between mb-6">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold bg-gradient-to-r from-foreground to-accent bg-clip-text text-transparent">
            Irving Frias
          </h1>
          <a
            target="_blank"
            href="/rss.xml"
            class="p-2 rounded-lg hover:bg-muted transition-colors"
            aria-label="rss feed"
            title="RSS Feed"
          >
            <IconRss
              width={24}
              height={24}
              class="stroke-accent stroke-2 hover:stroke-accent-hover transition-colors"
            />
            <span class="sr-only">RSS Feed</span>
          </a>
        </div>

        <!-- Title -->
        <h2 class="text-2xl md:text-3xl font-semibold text-foreground/90 mb-4">
          Senior Drupal Full-Stack Developer
        </h2>

        <!-- Main description -->
        <p class="text-lg md:text-xl leading-relaxed text-foreground/80 mb-8">
          With <span class="font-bold text-accent">6+ years</span> of comprehensive experience across the Drupal ecosystem. 
          Expert in modern frontend development and robust backend architecture.
        </p>

        <!-- Tech highlights grid -->
        <div class="mb-10">
          <h3 class="text-xl font-semibold mb-4 flex items-center">
            <span class="w-8 h-0.5 bg-accent mr-3"></span>
            Technical Expertise
          </h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
            <div class="space-y-3">
              <div class="flex items-start">
                <div class="w-2 h-2 bg-accent rounded-full mt-2 mr-3"></div>
                <div>
                  <h4 class="font-medium">Frontend</h4>
                  <p class="text-sm text-foreground/70">
                    SDC, Sass, Bootstrap, Tailwind, Gulp, Storybook
                  </p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-2 h-2 bg-accent rounded-full mt-2 mr-3"></div>
                <div>
                  <h4 class="font-medium">Backend</h4>
                  <p class="text-sm text-foreground/70">
                    Custom Modules, REST/JSON:API, Paragraphs, Layout Builder
                  </p>
                </div>
              </div>
            </div>
            
            <div class="space-y-3">
              <div class="flex items-start">
                <div class="w-2 h-2 bg-accent rounded-full mt-2 mr-3"></div>
                <div>
                  <h4 class="font-medium">Architecture</h4>
                  <p class="text-sm text-foreground/70">
                    Multisite, Multitenant, Multilingual
                  </p>
                </div>
              </div>
              
              <div class="flex items-start">
                <div class="w-2 h-2 bg-accent rounded-full mt-2 mr-3"></div>
                <div>
                  <h4 class="font-medium">DevOps</h4>
                  <p class="text-sm text-foreground/70">
                    GitHub Actions CI/CD, Docker, Performance Tuning
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- CTA Section -->
        <div class="bg-muted/30 rounded-xl p-6 mb-8 border border-border">
          <h3 class="text-xl font-semibold mb-4">Available for challenging Drupal roles</h3>
          <p class="text-foreground/80 mb-6">
            Seeking opportunities that leverage full-stack capabilities and architectural thinking in complex environments.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4">
            <a 
              href="mailto:irvingfrias41@gmail.com" 
              class="inline-flex items-center justify-center gap-2 px-6 py-3 bg-transparent border-2 border-accent text-accent rounded-lg hover:bg-accent/10 transition-colors font-medium"
            >
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
              Contact Me
            </a>
          </div>
        </div>
      </div>
    </section>


    {
      featuredPosts.length > 0 && (
        <section
          id="featured"
          class:list={[
            "pt-12 pb-6",
            { "border-b border-border": recentPosts.length > 0 },
          ]}
        >
          <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
          <ul>
            {featuredPosts.map(data => (
              <Card variant="h3" {...data} />
            ))}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    {
      recentPosts.length > 0 && (
        <div class="my-8 text-center">
          <LinkButton href="/posts/">
            All Posts
            <IconArrowRight class="inline-block rtl:-rotate-180" />
          </LinkButton>
        </div>
      )
    }
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>
