<form
  id="drupalContactForm"
  action="https://formsubmit.co/irvingfrias41@gmail.com"
  method="POST"
  class="max-w-2xl mx-auto p-6 md:p-8 space-y-8 bg-white dark:bg-gray-900 rounded-xl shadow-xl border border-gray-200 dark:border-gray-700 my-[50px]"
>
  <!-- FormSubmit Configuration -->
  <input type="hidden" name="_next" value="https://irving-frias.github.io/thank-you">
  <input type="hidden" name="_subject" value="Drupal Development Inquiry - New Client">
  <input type="hidden" name="_template" value="table">
  <input type="hidden" name="_captcha" value="false">
  <input type="hidden" name="_autoresponse" value="Thank you for your Drupal development inquiry! I'll review your requirements and get back to you within 24 hours.">
  
  <!-- Honeypot -->
  <input type="text" name="_honey" style="display:none" tabindex="-1" autocomplete="off">
  
  <!-- Form Header -->
  <div class="text-center space-y-2">
    <div class="inline-flex items-center justify-center p-3 bg-gradient-to-br from-blue-50 to-purple-50 dark:from-blue-900/20 dark:to-purple-900/20 rounded-full">
      <svg class="w-8 h-8 text-blue-600 dark:text-blue-400" fill="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
        <path d="M13.5 2.5l-1 2.5h-1.5V4H8v4h1V5.5h1.5l1-3H13.5zm-3.5 6v6H10V9H8v7h8V9h-2v6h2v2H6V9h4zm5.5 2c.828 0 1.5.672 1.5 1.5s-.672 1.5-1.5 1.5-1.5-.672-1.5-1.5.672-1.5 1.5-1.5z"/>
      </svg>
    </div>
    <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
      Drupal Development Services Inquiry
    </h2>
    <p class="text-gray-600 dark:text-gray-300">
      Let's discuss your Drupal project requirements
    </p>
  </div>
  
  <!-- Contact Information -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-2">
      <label for="name" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
        Full Name <span class="text-red-500">*</span>
      </label>
      <input
        type="text"
        id="name"
        name="name"
        required
        placeholder="John Smith"
        class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition duration-200"
      >
      <p class="text-sm text-red-500 hidden" data-error="name"></p>
    </div>
    
    <div class="space-y-2">
      <label for="email" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
        Work Email <span class="text-red-500">*</span>
      </label>
      <input
        type="email"
        id="email"
        name="email"
        required
        placeholder="john@company.com"
        class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition duration-200"
      >
      <p class="text-sm text-red-500 hidden" data-error="email"></p>
    </div>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-2">
      <label for="company" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
        Company / Organization
      </label>
      <input
        type="text"
        id="company"
        name="company"
        placeholder="Your company name"
        class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition duration-200"
      >
    </div>
    
    <div class="space-y-2">
      <label for="phone" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
        Phone Number
      </label>
      <input
        type="tel"
        id="phone"
        name="phone"
        placeholder="+1 (555) 123-4567"
        class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition duration-200"
      >
    </div>
  </div>
  
  <!-- Drupal Project Type -->
  <div class="space-y-3">
    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
      What type of Drupal project do you need? <span class="text-red-500">*</span>
    </label>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-3">
      <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-blue-50 dark:hover:bg-gray-800 cursor-pointer transition">
        <input type="radio" name="project_type" value="New Drupal Website" class="mr-3 text-blue-600" required>
        <span class="text-gray-700 dark:text-gray-300">New Drupal Website</span>
      </label>
      
      <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-blue-50 dark:hover:bg-gray-800 cursor-pointer transition">
        <input type="radio" name="project_type" value="Drupal Migration/Upgrade" class="mr-3 text-blue-600">
        <span class="text-gray-700 dark:text-gray-300">Drupal Migration/Upgrade</span>
      </label>
      
      <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-blue-50 dark:hover:bg-gray-800 cursor-pointer transition">
        <input type="radio" name="project_type" value="Custom Module Development" class="mr-3 text-blue-600">
        <span class="text-gray-700 dark:text-gray-300">Custom Module Development</span>
      </label>
      
      <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-blue-50 dark:hover:bg-gray-800 cursor-pointer transition">
        <input type="radio" name="project_type" value="Theme & Frontend" class="mr-3 text-blue-600">
        <span class="text-gray-700 dark:text-gray-300">Theme & Frontend</span>
      </label>
      
      <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-blue-50 dark:hover:bg-gray-800 cursor-pointer transition">
        <input type="radio" name="project_type" value="Maintenance & Support" class="mr-3 text-blue-600">
        <span class="text-gray-700 dark:text-gray-300">Maintenance & Support</span>
      </label>
      
      <label class="flex items-center p-3 border border-gray-300 dark:border-gray-600 rounded-lg hover:bg-blue-50 dark:hover:bg-gray-800 cursor-pointer transition">
        <input type="radio" name="project_type" value="Performance Optimization" class="mr-3 text-blue-600">
        <span class="text-gray-700 dark:text-gray-300">Performance Optimization</span>
      </label>
    </div>
    <p class="text-sm text-red-500 hidden" data-error="project_type"></p>
  </div>
  
  <!-- Drupal Version -->
  <div class="space-y-3">
    <label class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
      Drupal Version (if applicable)
    </label>
    <div class="flex flex-wrap gap-3">
      <label class="inline-flex items-center">
        <input type="radio" name="drupal_version" value="Drupal 7" class="mr-2 text-blue-600">
        <span class="text-gray-700 dark:text-gray-300">Drupal 7</span>
      </label>
      <label class="inline-flex items-center">
        <input type="radio" name="drupal_version" value="Drupal 8/9" class="mr-2 text-blue-600">
        <span class="text-gray-700 dark:text-gray-300">Drupal 8/9</span>
      </label>
      <label class="inline-flex items-center">
        <input type="radio" name="drupal_version" value="Drupal 10" class="mr-2 text-blue-600">
        <span class="text-gray-700 dark:text-gray-300">Drupal 10</span>
      </label>
      <label class="inline-flex items-center">
        <input type="radio" name="drupal_version" value="Not Sure" class="mr-2 text-blue-600">
        <span class="text-gray-700 dark:text-gray-300">Not Sure / Consultation Needed</span>
      </label>
    </div>
  </div>
  
  <!-- Timeline & Budget -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div class="space-y-2">
      <label for="timeline" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
        Project Timeline
      </label>
      <select
        id="timeline"
        name="timeline"
        class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition duration-200"
      >
        <option value="">Select timeline</option>
        <option value="ASAP">ASAP</option>
        <option value="1-2 weeks">1-2 weeks</option>
        <option value="1 month">1 month</option>
        <option value="1-3 months">1-3 months</option>
        <option value="3-6 months">3-6 months</option>
        <option value="6+ months">6+ months</option>
        <option value="Flexible">Flexible</option>
      </select>
    </div>
    
    <div class="space-y-2">
      <label for="budget" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
        Estimated Budget Range
      </label>
      <select
        id="budget"
        name="budget"
        class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white transition duration-200"
      >
        <option value="">Select budget range</option>
        <option value="Under $5,000">Under $5,000</option>
        <option value="$5,000 - $10,000">$5,000 - $10,000</option>
        <option value="$10,000 - $25,000">$10,000 - $25,000</option>
        <option value="$25,000 - $50,000">$25,000 - $50,000</option>
        <option value="$50,000 - $100,000">$50,000 - $100,000</option>
        <option value="$100,000+">$100,000+</option>
        <option value="To be discussed">To be discussed</option>
      </select>
    </div>
  </div>
  
  <!-- Project Details -->
  <div class="space-y-2">
    <label for="project_details" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
      Project Details & Requirements <span class="text-red-500">*</span>
      <span class="block text-sm font-normal text-gray-500 dark:text-gray-400 mt-1">
        Please describe your project, goals, and any specific requirements
      </span>
    </label>
    <textarea
      id="project_details"
      name="message"
      required
      rows="6"
      placeholder="Example: We need a Drupal 10 website with e-commerce capabilities, custom content types, and integration with our CRM system. Our current site is on Drupal 7 and needs migration..."
      class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white resize-none transition duration-200"
      minlength="50"
    ></textarea>
    <div class="flex justify-between items-center">
      <p class="text-sm text-red-500 hidden" data-error="message"></p>
      <p class="text-sm text-gray-500 dark:text-gray-400">
        <span id="charCount">0</span> characters (min. 50)
      </p>
    </div>
  </div>
  
  <!-- Attachment -->
  <div class="space-y-2">
    <label for="attachment" class="block text-sm font-semibold text-gray-700 dark:text-gray-300">
      Attach Files (Optional)
      <span class="block text-sm font-normal text-gray-500 dark:text-gray-400 mt-1">
        Wireframes, specifications, or relevant documents
      </span>
    </label>
    <input
      type="file"
      id="attachment"
      name="attachment"
      class="w-full px-4 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-800 dark:text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-50 file:text-blue-700 hover:file:bg-blue-100 dark:file:bg-gray-700 dark:file:text-gray-200 transition duration-200"
      multiple
      accept=".pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.zip"
    >
  </div>
  
  <!-- Submit Button -->
  <div class="pt-4">
    <button
      type="submit"
      id="submitBtn"
      class="w-full py-4 px-6 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-bold text-lg rounded-lg shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-4 focus:ring-blue-500/30 disabled:opacity-70 disabled:cursor-not-allowed"
    >
      <span class="flex items-center justify-center gap-3">
        <svg id="spinner" class="hidden w-5 h-5 text-white animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
          <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
          <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
        </svg>
        <span id="btnText">Request Drupal Development Quote</span>
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
        </svg>
      </span>
    </button>
  </div>
  
  <!-- Status Message -->
  <div id="formStatus" class="hidden p-4 rounded-lg text-sm font-medium border"></div>
</form>

